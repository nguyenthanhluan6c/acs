<%= form_for [:admin, formula] do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :display_name %>
      <%= f.text_field :display_name, class: "form-control", autofocus: true %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :expression %>
      <%= f.text_field :expression, class: "form-control" %>
      <%= f.label :index %>
      <%= f.text_field :index, class: "form-control" %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit t(".save"), data: {disable_with: t(".saving")}, class: "btn btn-primary" %>
    <a type="button" data-dismiss="modal" aria-label="Close" style="cursor: pointer;">
      <%= t ".cancel" %>
    </a>
  </div>
<% end %>
