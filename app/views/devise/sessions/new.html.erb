<div class="col-md-4 col-md-offset-4">
  <h1 class="text-center devise-tittle"><%= t("devise.sessions.login") %></h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html:{role: "devise"}) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class:"form-control",
        placeholder: t("devise.sessions.enter_email") %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class:"form-control",
        placeholder: t("devise.sessions.enter_pass") %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit t("devise.sessions.login"), class: "btn btn-block btn-devise" %>
    </div>
    <section>
      <%= render "devise/shared/links" %>
    </section>
  <% end %>
</div>
